<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <shape android:shape="rectangle">
            <solid android:color="@color/background_add_screen" /> <!-- Белый фон -->
            <stroke
                android:width="2dp"
                android:color="@android:color/holo_red_light" /> <!-- Красный контур -->
            <corners android:radius="15dp" /> <!-- Закруглённые края -->
            <padding
                android:left="10dp"
                android:top="0dp"
                android:right="5dp"
                android:bottom="0dp" />
        </shape>
    </item>

        <!-- 2. Стрелка справа по центру -->
    <item
    android:drawable="@drawable/ic_arrow_drop_down"
    android:gravity="right|center_vertical" />

</layer-list>
