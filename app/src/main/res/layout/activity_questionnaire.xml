<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.MaterialChipTheme"
    tools:context=".QuestionnaireActivity">

    <TextView
        android:id="@+id/tv_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:text="@string/title_questionnaire"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:id="@+id/scroll_onboarding"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/layout_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_intro">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/question_allergy"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/allergy_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="15sp"
                android:paddingStart="10dp"
                android:visibility="gone"
                android:text="@string/allergy_error"
                android:textStyle="italic"
                 />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/exclude_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="6dp">

                <CheckBox
                    android:id="@+id/cb_milk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/milk"
                    app:layout_constraintStart_toStartOf="@+id/exclude_products"
                    app:layout_constraintTop_toTopOf="@+id/exclude_products"
                    tools:ignore="TouchTargetSizeCheck" />

                <CheckBox
                    android:id="@+id/cb_eggs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="200dp"
                    android:text="@string/eggs"
                    app:layout_constraintStart_toStartOf="@+id/exclude_products"
                    app:layout_constraintTop_toTopOf="@+id/exclude_products"
                    tools:ignore="TouchTargetSizeCheck" />

                <CheckBox
                    android:id="@+id/cb_nuts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nuts"
                    app:layout_constraintStart_toStartOf="@+id/exclude_products"
                    app:layout_constraintTop_toBottomOf="@+id/cb_milk"
                    tools:ignore="TouchTargetSizeCheck" />

                <CheckBox
                    android:id="@+id/cb_peanuts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="200dp"
                    android:text="@string/peanuts"
                    app:layout_constraintStart_toStartOf="@+id/exclude_products"
                    app:layout_constraintTop_toBottomOf="@+id/cb_milk"
                    tools:ignore="TouchTargetSizeCheck" />

                <CheckBox
                    android:id="@+id/cb_fish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fish"
                    app:layout_constraintStart_toStartOf="@+id/exclude_products"
                    app:layout_constraintTop_toBottomOf="@+id/cb_nuts"
                    tools:ignore="TouchTargetSizeCheck" />

                <CheckBox
                    android:id="@+id/cb_shellfish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="200dp"
                    android:text="@string/shellfish"
                    app:layout_constraintStart_toStartOf="@+id/exclude_products"
                    app:layout_constraintTop_toBottomOf="@+id/cb_nuts"
                    tools:ignore="TouchTargetSizeCheck" />


                <CheckBox
                    android:id="@+id/cb_soy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/soy"
                    app:layout_constraintStart_toStartOf="@+id/exclude_products"
                    app:layout_constraintTop_toBottomOf="@+id/cb_fish"
                    tools:ignore="TouchTargetSizeCheck" />

                <CheckBox
                    android:id="@+id/cb_wheat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="200dp"
                    android:text="@string/wheat"
                    app:layout_constraintStart_toStartOf="@+id/exclude_products"
                    app:layout_constraintTop_toBottomOf="@+id/cb_fish"
                    tools:ignore="TouchTargetSizeCheck" />

                <CheckBox
                    android:id="@+id/cb_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cb_other"
                    app:layout_constraintStart_toStartOf="@+id/exclude_products"
                    app:layout_constraintTop_toBottomOf="@+id/cb_soy"
                    tools:ignore="TouchTargetSizeCheck" />

                <EditText
                    android:id="@+id/et_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:ems="12"
                    android:hint="@string/enter_other"
                    android:inputType="textCapSentences"
                    android:minHeight="0dp"
                    android:textSize="14sp"
                    android:padding="7dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@+id/cb_other"
                    app:layout_constraintTop_toBottomOf="@+id/cb_soy"
                    tools:ignore="TouchTargetSizeCheck" />

                <CheckBox
                    android:id="@+id/cb_no_allergy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="15dp"
                    android:text="@string/no_allergy"
                    app:layout_constraintStart_toStartOf="@+id/exclude_products"
                    app:layout_constraintTop_toBottomOf="@+id/cb_other"
                    tools:ignore="TouchTargetSizeCheck" />
            </androidx.constraintlayout.widget.ConstraintLayout>
