                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/question_type_dish"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/category_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingStart="10dp"
                style="@style/DarkerColor"
                android:text="@string/category_hint"
                android:textStyle="italic"
                />
            <TextView
                android:id="@+id/category_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="15sp"
                android:paddingStart="10dp"
                android:visibility="gone"
                android:text="@string/category_error"
                android:textStyle="italic"
                />


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/allergy_chip_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:selectionRequired="false"
                android:paddingTop="10dp"
                app:singleSelection="false">


                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_soup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_soup"
